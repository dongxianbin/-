<!--index.wxml-->
<view class='page-body'>

  <view class="flex-wrp" style="flex-direction:column;"> 
    <view class="page-content"> 
      <video class="myVideo" src="{{videourl}}" custom-cache="{{false}}" enable-danmu danmu-btn controls></video>  
    </view> 
  </view>

  <view class="flex-wrp" style="flex-direction:column;">
    <view class='page-content'>
      <swiper class='swiper' indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
        <block wx:for="{{imgUrls}}">
          <swiper-item>
             <image class='swiper-image' src="{{item}}"></image>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>

  <view class="flex-wrp" style="flex-direction:column;">
    <view class='page-content'>
      <image class='image image1' mode="scaleToFill" src="{{advurl1}}"></image>
    </view>

    <text class='text text1' space='emsp'>{{advtext1}}</text>

    <view class="page-content"> 
      <image class='image image2' mode="scaleToFill" src="../image/adv3.jpg">
      </image>
    </view>

    <view class='page-content'>
      <image class='image image3' mode="scaleToFill" src="../image/adv4.jpg">
      </image>
    </view>

    <text class='text text1' space='emsp'>{{advtext2}}</text>

    <view class="page-content"> 
      <image class='image image4' mode="scaleToFill" src="../image/adv6.jpeg">
      </image>
    </view>

    <text class='text text1' space='emsp'>{{advtext3}}</text> 

  </view>
</view>